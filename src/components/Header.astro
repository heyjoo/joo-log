---
import ThemeToggle from './ThemeToggle.astro';

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const navItems = [
  { href: `${base}/`, label: '블로그' },
  { href: `${base}/til`, label: 'TIL' },
  { href: `${base}/about`, label: '소개' },
];
---

<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm border-b border-gray-200 dark:border-gray-800">
  <div class="max-w-4xl mx-auto px-4">
    <nav class="flex items-center justify-between h-16">
      <a href={`${base}/`} class="text-xl font-bold text-gray-900 dark:text-white hover:no-underline">
        joo-log
      </a>
      <div class="flex items-center gap-6">
        <ul class="flex items-center gap-4">
          {navItems.map((item) => (
            <li>
              <a
                href={item.href}
                class="text-gray-600 dark:text-gray-300 hover:text-gray-900 dark:hover:text-white hover:no-underline transition-colors"
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
        <ThemeToggle />
      </div>
    </nav>
  </div>
</header>
